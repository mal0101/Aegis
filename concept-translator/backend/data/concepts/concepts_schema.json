{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Concept Schema",
  "description": "Schema for The Bridge AI concept definitions",
  "type": "object",
  "required": [
    "id",
    "term",
    "definition",
    "simple_explanation",
    "examples",
    "policy_relevance",
    "sources",
    "difficulty_level",
    "categories"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "minLength": 3,
      "maxLength": 50,
      "description": "Unique identifier in kebab-case"
    },
    "term": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "Human-readable term"
    },
    "definition": {
      "type": "string",
      "minLength": 50,
      "maxLength": 500,
      "description": "Academic/technical definition"
    },
    "simple_explanation": {
      "type": "string",
      "minLength": 20,
      "maxLength": 200,
      "description": "Layperson explanation"
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 20,
        "maxLength": 300
      },
      "minItems": 2,
      "maxItems": 5,
      "description": "Real-world examples"
    },
    "policy_relevance": {
      "type": "string",
      "minLength": 50,
      "maxLength": 500,
      "description": "Morocco-specific policy implications"
    },
    "related_concepts": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
      },
      "maxItems": 5,
      "description": "Related concept IDs"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "minItems": 1,
      "maxItems": 5,
      "description": "Source URLs"
    },
    "difficulty_level": {
      "type": "string",
      "enum": ["beginner", "intermediate", "advanced"],
      "description": "Complexity level"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "fairness",
          "ethics",
          "transparency",
          "governance",
          "technical",
          "risk",
          "data",
          "economic"
        ]
      },
      "minItems": 1,
      "maxItems": 3,
      "description": "Concept categories"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    }
  },
  "additionalProperties": false
}